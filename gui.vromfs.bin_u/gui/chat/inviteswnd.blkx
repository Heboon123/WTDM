root {
	type:t = "big"
	blur {

	}
	blur_foreground {

	}
	frame {
		id:t = "wnd_frame"
		size:t = "0.7@sf, 0.7@sf"
		class:t = "wndNav"
		isCenteredUnderLogo:t = "yes"
		rootUnderPopupMenu {
			on_click:t = "goBack"
		}
		frame_header {
			activeText {
				caption:t = "yes"
				text:t = "#mainmenu/invites"
			}
			Button_close {
				id:t = "btn_back"
			}
		}
		tdiv {
			id:t = "invites_list_place"
			size:t = "pw, fh"
			flow:t = "vertical"
			EditBox {
				id:t = "search_edit_box"
				width:t = "pw"
				position:t = "relative"
				noMargin:t = "yes"
				edit-hint:t = "#contacts/search_placeholder"
				text:t = ""
				on_cancel_edit:t = "onSearchEditBoxCancelEdit"
				on_change_value:t = "onSearchEditBoxChangeValue"
			}
			listbox {
				id:t = "invites_list"
				size:t = "pw, fh"
				flow:t = "vertical"
				selImgType:t = "gamepadFocused"
				navigatorShortcuts:t = "yes"
				on_dbl_click:t = "onAccept"
				on_select:t = "onInviteSelect"
			}
		}
		textareaNoTab {
			id:t = "now_new_invites"
			width:t = "pw"
			pos:t = "0.5pw-0.5w, 0.5ph-0.5h"
			position:t = "absolute"
			text-align:t = "center"
			text:t = "#invite/noNewInvites"
		}
		navBar {
			navLeft {
				CheckBox {
					id:t = "auto_close"
					left:t = "1@blockInterval"
					position:t = "relative"
					text:t = "#invite/closeWndOnAccept"
					value:t = "no"
					on_change_value:t = "onAutoCloseChange"
					CheckBoxImg {

					}
				}
			}
		}
	}
}
DummyButton {
	btnName:t = "Y"
	on_click:t = "onInviterInfoAccessKey"
}
DummyButton {
	btnName:t = "LB"
	on_click:t = "onReject"
}
DummyButton {
	btnName:t = "X"
	on_click:t = "onAccept"
}