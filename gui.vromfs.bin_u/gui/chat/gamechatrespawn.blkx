tdiv {
	id:t = "chat"
	position:t = "relative"
	flow:t = "vertical"
	width:t = "pw"
	height:t = "fh"
	pos:t = "1,1"
	HorizontalListBox {
		id:t = "chat_tabs"
		width:t = "pw"
		class:t = "tabs"
		smallFont:t = "yes"
		navigatorShortcuts:t = "yes"
		on_select:t = "onChatTabChange"
		shopFilter {
			id:t = "mpchat"
			shopFilterText {
				text:t = "#mainmenu/chat"
			}
		}
		shopFilter {
			id:t = "battlelog"
			shopFilterText {
				text:t = "#options/_Bttl"
			}
		}
	}
	EditBoxBG {
		position:t = "relative"
		width:t = "pw"
		height:t = "fh"
		overflow-y:t = "auto"
		auto-scroll:t = "yes"
		padding:t = "0.5*@scrn_tgt/100.0"
		chatLog {
			width:t = "pw"
			id:t = "chat_log"
			text:t = ""
			on_link_click:t = "onChatLinkClick"
			on_link_rclick:t = "onChatLinkRClick"
		}
	}
	div {
		id:t = "chat_input_back"
		display:t = "show"
		flow:t = "horizontal"
		position:t = "relative"
		margin-top:t = "1@blockInterval"
		size:t = "pw, @buttonHeight"
		tdiv {
			id:t = "chat_prompt_place"
			Button_text {
				id:t = "chat_prompt"
				text:t = ""
				width:t = "15*@scrn_tgt/100.0"
				pos:t = "0, ph/2-h/2"
				position:t = "relative"
				style:t = "padding-left:1*@scrn_tgt/100.0; min-width:15*@scrn_tgt/100.0;"
				showConsoleImage:t = "no"
				_on_click:t = "onChatMode"
				accesskey:t = "Tab"
				noMargin:t = "yes"
			}
		}
		EditBox {
			text:t = ""
			id:t = "chat_input"
			pos:t = "1@blockInterval, ph/2-h/2"
			position:t = "relative"
			width:t = "pw -30@scrn_tgt/100.0 -2@blockInterval"
			max-len:t = "250"
			on_activate:t = "onChatEntered"
			on_cancel_edit:t = "onChatCancel"
			on_change_value:t = "onChatChanged"
		}
		Button_text {
			id:t = "btn_send"
			width:t = "15*@scrn_tgt/100.0"
			pos:t = "1@blockInterval, ph/2-h/2"
			position:t = "relative"
			text:t = "#chat/send"
			_on_click:t = "onChatSend"
			showConsoleImage:t = "no"
			style:t = "padding-left:1*@scrn_tgt/100.0; min-width:15*@scrn_tgt/100.0;"
			noMargin:t = "yes"
		}
	}
}