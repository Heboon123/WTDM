tdiv {
	size:t = "pw, ph"
	flow:t = "vertical"
	chatBlock {
		id:t = "custom_chat_text_block"
		size:t = "pw, fh"
		style:t = "overflow-y:auto;"
		overflow-y:t = "auto"
		auto-scroll:t = "yes"
		flow:t = "vertical"
	}
	ChatInputPlace {
		id:t = "chat_input_place"
		size:t = "pw, @buttonHeight"
		pos:t = "0, 0.5*@scrn_tgt/100.0"
		position:t = "relative"
		sendHintType:t = "custom"
		EditBox {
			id:t = "menuchat_input"
			width:t = "fw"
			max-len:t = "250"
			selected:t = "yes"
			on_activate:t = "onChatEntered"
			on_cancel_edit:t = "onChatCancel"
			font:t = "@fontSmall"
			text:t = ""
			_customRoomId:t = ""
			enable:t = "no"
		}
		Button_text {
			id:t = "btn_send"
			pos:t = "0.5*@scrn_tgt/100.0, 50%ph-50%h"
			position:t = "relative"
			text:t = "#chat/send"
			on_click:t = "onChatSend"
			enable:t = "no"
			noMargin:t = "yes"
			showConsoleImage:t = "no"
		}
		SendButtonHint {
			id:t = "btn_send_hint"
			position:t = "absolute"
			display:t = "hide"
			padding:t = "15@sf/@pf"
			background-color:t = "@frameHeaderBackgroundColor"
			border-color:t = "@frameDarkMenuBorderColor"
			border:t = "yes"
			border-offset:t = "@dp"
			textareaNoTab {
				width:t = "pw"
				text:t = "#chat/send_disabled_hint"
				smallFont:t = "yes"
			}
		}
	}
	dummy {
		id:t = "btn_prevMsg"
		on_click:t = "onPrevMsg"
		behaviour:t = "accesskey"
		accessKey:t = "Alt Up"
	}
	dummy {
		id:t = "btn_nextMsg"
		on_click:t = "onNextMsg"
		behaviour:t = "accesskey"
		accessKey:t = "Alt Down"
	}
	tdiv {
		id:t = "custom_chat_timer"
		behaviour:t = "Timer"
		timer_handler_func:t = "onUpdate"
		timer_interval_msec:t = "1000"
	}
}