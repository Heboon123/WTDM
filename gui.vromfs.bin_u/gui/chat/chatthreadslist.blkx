listbox {
	id:t = "threads_list"
	size:t = "pw, fh"
	flow:t = "vertical"
	selImgType:t = "gamepadFocused"
	navigatorShortcuts:t = "cancel"
	on_dbl_click:t = "onThreadsActivate"
	_on_select:t = "onThreadSelect"
	on_cancel_edit:t = "goBack"
}
tdiv {
	id:t = "threads_buttons_panel"
	width:t = "pw-2@framePadding"
	position:t = "relative"
	padding:t = "-1@buttonMargin-1@dp"
	margin:t = "1@framePadding"
	dummy {
		_on_click:t = "goBack"
		btnName:t = "B"
	}
	Button_text {
		id:t = "threads_search_langs_btn"
		max-width:t = "0.5 * (pw - 1@buttonWidth - 1@buttonHeight - 3@blockInterval)"
		noWidth:t = "yes"
		overflow:t = "hidden"
		class:t = "image"
		showConsoleImage:t = "no"
		isColoredImg:t = "yes"
		on_click:t = "onLangsBtn"
	}
	Button_text {
		id:t = "btn_categories_filter"
		width:t = "fw"
		showConsoleImage:t = "no"
		scaleble:t = "yes"
		talign:t = "left"
		on_click:t = "onCategoriesBtn"
	}
	tdiv {
		id:t = "buttons_separator"
		width:t = "fw"
		enable:t = "no"
	}
	Button_text {
		id:t = "btn_refresh"
		size:t = "1@buttonHeight, 1@buttonHeight"
		_on_click:t = "onRefresh"
		tooltip:t = "#mainmenu/btnRefresh"
		class:t = "image"
		showConsoleImage:t = "no"
		img {
			id:t = "btn_refresh_img"
			background-image:t = "#ui/gameuiskin#refresh.svg"
		}
		animated_wait_icon {
			id:t = "btn_refresh_wait_anim"
			pos:t = "50%pw-50%w,50%ph-50%h"
			position:t = "absolute"
			background-rotation:t = "0"
		}
	}
	Button_text {
		text:t = "#chat/createThread"
		on_click:t = "onCreateThread"
	}
}
timer {
	id:t = "threads_list_timer"
	timer_handler_func:t = "onUpdate"
	timer_interval_msec:t = "1000"
}