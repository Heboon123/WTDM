center:t = "0,0"
position:t = "absolute"
left:t = "0"
top:t = "0"
size:t = "sw, sh"
img {
	position:t = "absolute"
	size:t = "3sw - 3sw*@isInVr, sh/3+1"
	pos:t = "-sw,sh-h-1@bh"
	background-image:t = "#ui/gameuiskin#optionlist_background_down"
}
blur {

}
blur_foreground {
	isRoot:t = "yes"
}
optionlist_container {

}
div {
	position:t = "absolute"
	width:t = "pw"
	top:t = "0.5sh-0.5h"
	flow:t = "vertical"
	div {
		pos:t = "50%pw-50%w,0"
		position:t = "relative"
		activeText {
			id:t = "wait_screen_msg"
		}
	}
	animated_wait_icon {
		id:t = "wait_animation"
		pos:t = "50%pw-50%w,3%sh"
		position:t = "relative"
		background-rotation:t = "0"
	}
	timer {
		id:t = "wait_box_update_timer"
		timer_handler_func:t = "update"
	}
	timer {
		id:t = "wait_box_tag"
		timer_handler_func:t = "update"
	}
}
loadingTip {
	pos:t = "(pw-w)/2, 83%sh-50%h"
	position:t = "absolute"
	width:t = "75%sw"
	behaviour:t = "bhvLoadingTip"
	loadingHint {
		id:t = "tip_hint"
		width:t = "pw"
		behaviour:t = "bhvHint"
		isWrapInRowAllowed:t = "yes"
	}
}