tdiv {
	id:t = "item_desc"
	size:t = "pw, ph"
	flow:t = "vertical"
	scrollbarShortcuts:t = "yes"
	tdiv {
		size:t = "pw, ph"
		position:t = "absolute"
		wwBattleBackgroundBlock {
			wwBattleBackground {
				id:t = "operation_background"
			}
		}
		tdiv {
			size:t = "pw, ph"
			position:t = "absolute"
			wwBattleBackgroundShadow {
				type:t = "left"
			}
			wwBattleBackgroundShadow {
				type:t = "right"
			}
			wwBattleBackgroundShadow {
				type:t = "top"
			}
			wwBattleBackgroundShadow {
				type:t = "bottom"
				top:t = "ph-h"
			}
		}
	}
	tdiv {
		size:t = "pw, fh"
		margin:t = "1@blockInterval, 1@blockInterval, 0, 1@blockInterval"
		flow:t = "vertical"
		textareaNoTab {
			id:t = "item_desc"
			max-width:t = "80%pw"
			pos:t = "50%(pw-w), 0"
			position:t = "relative"
			margin-bottom:t = "@blockInterval"
			text-align:t = "center"
			hideEmptyText:t = "yes"
			text:t = ""
		}
		tdiv {
			width:t = "pw"
			margin-bottom:t = "@blockInterval"
			tdiv {
				size:t = "25%pw, ph"
				flow:t = "vertical"
				tdiv {
					id:t = "team_SIDE_1_countryes_info"
					margin-bottom:t = "@blockInterval"
				}
				wwWindowListBackground {
					id:t = "team_SIDE_1_army_group_info"
					size:t = "pw, fh"
					padding:t = "@wwWindowListBackgroundPadding"
					type:t = "left"
				}
			}
			tdiv {
				size:t = "25%pw, ph"
				pos:t = "pw-w, 0"
				position:t = "absolute"
				flow:t = "vertical"
				tdiv {
					id:t = "team_SIDE_2_countryes_info"
					pos:t = "pw-w, 0"
					position:t = "relative"
					margin-bottom:t = "@blockInterval"
				}
				wwWindowListBackground {
					id:t = "team_SIDE_2_army_group_info"
					size:t = "pw, fh"
					padding:t = "@wwWindowListBackgroundPadding"
					type:t = "right"
				}
			}
		}
		tdiv {
			size:t = "pw, fh"
			margin-bottom:t = "1@sf/@pf_outdated"
			wwWindowListBackground {
				id:t = "team_SIDE_1_unit_info"
				size:t = "25%pw, ph"
				padding:t = "@wwWindowListBackgroundPadding"
				type:t = "left"
			}
			wwWindowListBackground {
				id:t = "team_SIDE_2_unit_info"
				size:t = "25%pw, ph"
				pos:t = "pw-2w, 0"
				position:t = "relative"
				padding:t = "@wwWindowListBackgroundPadding"
				type:t = "right"
			}
		}
		tdiv {
			id:t = "map_nest_obj"
			pos:t = "50%pw-50%w, 50%ph-50%h"
			position:t = "absolute"
			flow:t = "vertical"
			ShadowPlate {
				id:t = "world_war_map_block"
				size:t = "pw, pw"
				min-height:t = "@wwOperationMapMinSize"
				min-width:t = "@wwOperationMapMinSize"
				pos:t = "50%pw-50%w, 0"
				position:t = "relative"
				padding:t = "0.01@scrn_tgt, 0, 0.01@scrn_tgt, 0.012@scrn_tgt"
				worldWarMap {
					id:t = "map_image"
					behaviour:t = "worldWarMapRender"
					size:t = "pw, pw"
					border:t = "yes"
					border-color:t = "@commonMenuButtonColor"
				}
			}
			textareaNoTab {
				id:t = "operation_start_date"
				pos:t = "50%pw-50%w, 0"
				position:t = "relative"
				text:t = ""
			}
			textareaNoTab {
				id:t = "operation_short_info_text"
				pos:t = "50%pw-50%w, 0"
				position:t = "relative"
				text:t = ""
			}
		}
	}
	tdiv {
		width:t = "pw"
		Button_text {
			id:t = "btn_collapsed_chapter"
			text:t = ""
			btnName:t = "A"
			display:t = "hide"
			enable:t = "no"
			_on_click:t = "onCollapsedChapter"
			ButtonImg {

			}
		}
	}
	tdiv {
		id:t = "operation_join_block"
		width:t = "pw"
		margin-left:t = "1@blockInterval"
		Button_text {
			id:t = "btn_join_SIDE_1"
			width:t = "1@bigButtonWidth"
			class:t = "battle"
			navButtonFont:t = "yes"
			isCancel:t = "no"
			btnName:t = "X"
			hasConsoleImage:t = "yes"
			_on_click:t = "onJoinOperationSide1"
			pattern {

			}
			buttonWink {
				_transp-timer:t = "0"
			}
			buttonGlance {

			}
			ButtonImg {

			}
			btnContent {
				cardImg {
					id:t = "is_clan_participate_img"
					margin-right:t = "@blockInterval"
					background-image:t = "#ui/gameuiskin#lb_victories_battles.svg"
				}
				btnText {
					id:t = "btn_join_text"
					text:t = "#events/join_event"
				}
				tdiv {
					id:t = "side_countries"
					margin-left:t = "@blockInterval"
					pos:t = "0, 50%ph-50%h"
					position:t = "relative"
				}
			}
		}
		textareaNoTab {
			id:t = "is_clan_participate_text"
			width:t = "fw"
			padding:t = "1@blockInterval, 0"
			pos:t = "0, 50%ph-50%h"
			position:t = "relative"
		}
		Button_text {
			id:t = "btn_join_SIDE_2"
			width:t = "1@bigButtonWidth"
			class:t = "battle"
			navButtonFont:t = "yes"
			isCancel:t = "no"
			btnName:t = "A"
			hasConsoleImage:t = "yes"
			_on_click:t = "onJoinOperationSide2"
			pattern {

			}
			buttonWink {
				_transp-timer:t = "0"
			}
			buttonGlance {

			}
			ButtonImg {

			}
			btnContent {
				cardImg {
					id:t = "is_clan_participate_img"
					margin:t = "1@blockInterval, 0"
					background-image:t = "#ui/gameuiskin#lb_victories_battles.svg"
				}
				btnText {
					id:t = "btn_join_text"
					text:t = "#events/join_event"
				}
				tdiv {
					id:t = "side_countries"
					margin:t = "1@blockInterval, 0"
					pos:t = "0, 50%ph-50%h"
					position:t = "relative"
				}
			}
		}
	}
}