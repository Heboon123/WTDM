chapterListPlace {
	id:t = "chapter_place"
	height:t = "ph"
	flow:t = "vertical"
	tdiv {
		id:t = "div_before_chapters_list"
		width:t = "pw"
		display:t = "hide"
	}
	tdiv {
		id:t = "chapters_list_place"
		size:t = "pw, fh"
		flow:t = "vertical"
		popupFilter {
			margin-left:t = "1@buttonMargin"
		}
		tdiv {
			id:t = "listbox_filter_holder"
			width:t = "pw"
			pos:t = "1@blockInterval, 0"
			position:t = "relative"
		}
		listbox {
			id:t = "items_list"
			size:t = "pw, fh"
			flow:t = "vertical"
			move-only-hover:t = "yes"
			navigatorShortcuts:t = "yes"
			on_select:t = "onItemSelect"
			_on_dbl_click:t = "onItemDblClick"
		}
		textAreaCentered {
			id:t = "items_list_msg"
			width:t = "80%pw"
			pos:t = "50%pw-50%w, 40%ph-40%h"
			position:t = "absolute"
			hideEmptyText:t = "yes"
			text:t = ""
		}
		animated_wait_icon {
			id:t = "items_list_wait_icon"
			pos:t = "50%pw-50%w, 40%ph-40%h"
			position:t = "absolute"
			background-rotation:t = "0"
			display:t = "hide"
		}
	}
}
chapterSeparator {
	margin:t = "1@blockInterval, 0"
}
tdiv {
	id:t = "item_desc"
	flow:t = "vertical"
	size:t = "fw, ph"
	overflow-y:t = "auto"
	total-input-transparent:t = "yes"
	text {
		left:t = "(pw-w)/2"
		id:t = "item_name"
		position:t = "relative"
		style:t = "font:@fontMedium;color:@titleTextColor;"
		textHide:t = "yes"
		text:t = ""
	}
	tdiv {
		id:t = "mission_desc"
		size:t = "pw,ph"
		position:t = "absolute"
		flow:t = "vertical"
	}
	tdiv {
		id:t = "chapter_include_block"
		size:t = "pw, fh"
		flow:t = "vertical"
		display:t = "hide"
		img {
			id:t = "item_desc_header_img"
			width:t = "pw"
			height:t = "w*128/1024"
			background-repeat:t = "expand"
			background-image:t = ""
		}
		tdiv {
			id:t = "div_before_text"
			width:t = "pw"
			flow:t = "h-flow"
			flow-align:t = "center"
		}
		tdiv {
			height:t = "fh"
			width:t = "pw"
			overflow-y:t = "auto"
			flow:t = "vertical"
			scrollbarShortcuts:t = "yes"
			total-input-transparent:t = "yes"
			textarea {
				id:t = "item_desc_text"
				width:t = "pw"
				chapterTextAreaStyle:t = "yes"
				hideEmptyText:t = "yes"
				text:t = ""
				font-bold:t = "@fontMedium"
			}
			tdiv {
				id:t = "session_results"
				width:t = "pw"
				padding-top:t = "0.01@scrn_tgt"
				flow:t = "vertical"
				display:t = "hide"
				textarea {
					chapterTextAreaStyle:t = "yes"
					font-bold:t = "@fontMedium"
					text:t = "#mainmenu/sessionResults"
				}
				tdiv {
					id:t = "results_table_place"
					width:t = "pw"
					flow:t = "vertical"
				}
			}
		}
	}
	tdiv {
		id:t = "after_desc_block"
		width:t = "pw"
	}
	tdiv {
		id:t = "item_misc"
		flow:t = "vertical"
	}
}