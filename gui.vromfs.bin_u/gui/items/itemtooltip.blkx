tdiv {
	width:t = "@itemInfoWidth"
	flow:t = "vertical"
	smallFont:t = "yes"
	tdiv {
		width:t = "pw"
		textAreaCentered {
			id:t = "item_name"
			max-width:t = "pw"
			overlayTextColor:t = "active"
			pos:t = "50%pw-50%w, 50%ph-50%h"
			position:t = "relative"
		}
		cardImg {
			id:t = "item_type_help"
			margin-left:t = "5@dp"
			type:t = "tiny"
			background-image:t = "#ui/gameuiskin#btn_help.svg"
			tooltip:t = ""
			display:t = "hide"
		}
	}
	textAreaCentered {
		id:t = "item_desc_under_title"
		max-width:t = "pw"
		overlayTextColor:t = "active"
		pos:t = "50%pw-50%w, 0"
		position:t = "relative"
		padding-bottom:t = "1@blockInterval"
	}
	itemIconBlock {
		id:t = "item_icon"
		pos:t = "50%pw-50%w, 0"
		position:t = "relative"
		doubleSize:t = "yes"
		wideSize:t = "no"
		overflow:t = "hidden"
		margin-bottom:t = "1@blockInterval"
		isPrizeUnitBought:t = "no"
	}
	textareaNoTab {
		id:t = "item_desc"
		position:t = "relative"
		width:t = "pw"
		font-bold:t = "@fontMedium"
		text:t = ""
		hideEmptyText:t = "yes"
	}
	div {
		id:t = "item_desc_div"
		width:t = "pw"
		flow:t = "vertical"
	}
	textareaNoTab {
		id:t = "item_desc_under_div"
		pos:t = "50%pw-50%w, 12@sf/@pf"
		position:t = "relative"
		width:t = "pw"
		smallFont:t = "yes"
		hideEmptyText:t = "yes"
	}
	div {
		id:t = "item_additional_desc_table"
		width:t = "pw"
		pos:t = "50%pw-50%w, 0"
		position:t = "relative"
		flow:t = "vertical"
		margin-top:t = "0.01@scrn_tgt"
		textareaNoTab {
			id:t = "item_desc_above_table"
			width:t = "pw"
			margin-bottom:t = "0.005*@scrn_tgt"
			text:t = ""
		}
		div {
			id:t = "item_table_container"
			width:t = "pw"
		}
		textareaNoTab {
			id:t = "item_desc_under_table"
			width:t = "pw"
			font-bold:t = "@fontMedium"
			text:t = ""
		}
	}
	timer {
		id:t = "update_timer"
		timer_handler_func:t = "onTimer"
		timer_interval_msec:t = "1000"
	}
}