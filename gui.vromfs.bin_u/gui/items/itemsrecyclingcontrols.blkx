tdiv {
	id:t = "recycling_controls"
	halign:t = "center"
	display:t = "hide"
	flow:t = "vertical"
	Button_text {
		id:t = "recycle_btn"
		halign:t = "center"
		visualStyle:t = "secondary"
		text:t = "#items/recycling/recycle"
		inactiveColor:t = "yes"
		btnName:t = "Y"
		on_click:t = "onRecycle"
		buttonWink {

		}
		ButtonImg {

		}
	}
	tdiv {
		width:t = "pw"
		padding:t = "0, 3@blockInterval"
		halign:t = "center"
		background-position:t = "0, @blockInterval, 0, h-1@blockInterval-1@dp"
		background-color:t = "@frameSeparatorColor"
		flow:t = "vertical"
		textAreaCentered {
			id:t = "create_items_desc_with_count_txt"
			width:t = "pw"
			halign:t = "center"
			text:t = ""
		}
		tdiv {
			margin-top:t = "14@sf/@pf"
			halign:t = "center"
			selectAmount {
				margin-top:t = "3@blockInterval"
				width:t = "@sliderWidth+2@sliderButtonSquareHeight+4@blockInterval"
				Button_text {
					id:t = "select_amount_btn_dec_create_items"
					holderId:t = "create_items"
					btnDec:t = "yes"
					enable:t = "no"
					on_click:t = "onAmountSliderBtnDec"
				}
				slider {
					id:t = "select_amount_slider_create_items"
					holderId:t = "create_items"
					on_change_value:t = "onCreateItemsAmountChange"
				}
				Button_text {
					id:t = "select_amount_btn_inc_create_items"
					holderId:t = "create_items"
					btnInc:t = "yes"
					on_click:t = "onAmountSliderBtnInc"
				}
			}
		}
		textAreaCentered {
			id:t = "select_amount_value_txt_create_items"
			text:t = "0/0"
			halign:t = "center"
		}
		Button_text {
			id:t = "create_items_btn"
			margin-top:t = "14@sf/@pf"
			halign:t = "center"
			enable:t = "no"
			visualStyle:t = "secondary"
			text:t = "#items/recycling/createItems"
			btnName:t = "X"
			on_click:t = "onCreateItems"
			buttonWink {

			}
			ButtonImg {

			}
		}
	}
}