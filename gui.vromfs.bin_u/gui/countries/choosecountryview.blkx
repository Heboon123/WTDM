root {
	blur {

	}
	blur_foreground {

	}
	frame {
		class:t = "wnd"
		position:t = "relative"
		pos:t = "50%pw-50%w, 50%ph-50%h"
		size:t = "900*@sf/@pf, 500*@sf/@pf + 1@frameFooterHeight"
		css-hier-invalidate:t = "yes"
		input-transparent:t = "no"
		frame_header {
			activeText {
				caption:t = "yes"
				text:t = "#countriesAppearance/title"
			}
			Button_close {

			}
		}
		tdiv {
			size:t = "pw, fh - 1@frameFooterHeight"
			listbox {
				id:t = "countries_list"
				size:t = "25%pw, ph"
				flow:t = "vertical"
				move-only-hover:t = "yes"
				navigatorShortcuts:t = "yes"
				on_select:t = "onItemSelect"
			}
			chapterSeparator {
				margin:t = "1@blockInterval"
			}
			tdiv {
				id:t = "country_style"
				size:t = "fw, ph"
				flow:t = "vertical"
				tdiv {
					size:t = "pw, 1@optContainerHeight"
					textareaNoTab {
						width:t = "pw/3 - 2@blockInterval"
						valign:t = "center"
						text-align:t = "right"
						text:t = "#countriesAppearance/options/appearance"
					}
					cellSeparator {
						margin:t = "2@blockInterval, 0, 2@blockInterval, 0"
						size:t = "1@dp, 0.75ph"
						valign:t = "center"
						background-color:t = "@separatorBlockColor"
					}
					ComboBox {
						id:t = "customCountryFlags"
						width:t = "fw"
						height:t = "@baseTrHeight - 4@dp"
						valign:t = "center"
						on_select:t = "onEditFlag"
					}
				}
				tdiv {
					size:t = "pw, 1@optContainerHeight"
					textareaNoTab {
						width:t = "pw/3 - 2@blockInterval"
						valign:t = "center"
						text-align:t = "right"
						text:t = "#countriesAppearance/options/style"
					}
					cellSeparator {
						margin:t = "2@blockInterval, 0, 2@blockInterval, 0"
						size:t = "1@dp, 0.75ph"
						valign:t = "center"
						background-color:t = "@separatorBlockColor"
					}
					ComboBox {
						id:t = "customCountryStyles"
						width:t = "fw"
						height:t = "@baseTrHeight - 4@dp"
						valign:t = "center"
						on_select:t = "onEditStyle"
					}
				}
			}
		}
		navBar {
			navLeft {
				CheckBox {
					id:t = "useOperatorFlagsInBattle"
					valign:t = "center"
					margin-left:t = "1@blockInterval"
					text:t = "#countriesAppearance/useOperatorFlagsInBattle"
					tooltip:t = "#countriesAppearance/useOperatorFlagsInBattle/tooltip"
					on_change_value:t = "onUseOperatorFlagsInBattle"
					CheckBoxImg {

					}
				}
			}
			navRight {
				Button_text {
					text:t = "#options/resetToDefaults"
					btnName:t = "X"
					on_click:t = "onResetToDefaults"
					ButtonImg {

					}
				}
			}
		}
	}
}