rootUnderPopupMenu {
	on_click:t = "goBack"
	on_r_click:t = "goBack"
}
popup_menu {
	id:t = "squad_info"
	position:t = "root"
	not-input-transparent:t = "yes"
	css-hier-invalidate:t = "yes"
	flow:t = "vertical"
	menu_align:t = "bottom"
	activeText {
		id:t = "invited_players_header"
		position:t = "relative"
		text:t = "#squad/memberListTitle"
		halign:t = "center"
	}
	listbox {
		id:t = "members"
		width:t = "0.35@sf"
		flow:t = "vertical"
		showSelect:t = "yes"
		navigatorShortcuts:t = "yes"
		on_select:t = "onItemSelect"
		on_dbl_click:t = "onMemberClick"
	}
	popup_menu_arrow {

	}
}
timer {
	id:t = "squad_info_update"
	timer_handler_func:t = "onUpdate"
	timer_interval_msec:t = "1000"
}