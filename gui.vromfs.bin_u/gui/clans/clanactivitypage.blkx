id:t = "clan_activity_container"
padding:t = "0.01*@scrn_tgt"
flow:t = "vertical"
tdiv {
	left:t = "pw-w-0.02@scrn_tgt"
	position:t = "relative"
	textareaNoTab {
		id:t = "clan_activity_today_text"
		overlayTextColor:t = "active"
		text:t = "#clan/activity_current"
		caption:t = "yes"
	}
	tdiv {
		padding-left:t = "0.01@scrn_tgt"
		cardImg {
			id:t = "clan_activity_today_icon"
			background-image:t = "#ui/gameuiskin#lb_activity.svg"
			type:t = "medium"
			tooltip:t = "#clan/activity"
		}
		textarea {
			id:t = "clan_activity_today_value"
			top:t = "50%ph-50%h"
			position:t = "relative"
			text:t = ""
			overlayTextColor:t = "userlog"
			caption:t = "yes"
		}
	}
}
tdiv {
	left:t = "pw-w-0.02@scrn_tgt"
	position:t = "relative"
	textareaNoTab {
		id:t = "clan_activity_total_text"
		overlayTextColor:t = "active"
		text:t = "#clan/activity_total"
		caption:t = "yes"
	}
	tdiv {
		padding-left:t = "0.01@scrn_tgt"
		cardImg {
			id:t = "clan_activity_total_icon"
			background-image:t = "#ui/gameuiskin#lb_activity.svg"
			tooltip:t = "#clan/activity"
			type:t = "medium"
		}
		textarea {
			id:t = "clan_activity_total_value"
			top:t = "50%ph-50%h"
			position:t = "relative"
			text:t = ""
			overlayTextColor:t = "userlog"
			caption:t = "yes"
		}
	}
}
tdiv {
	width:t = "pw"
	table {
		id:t = "clan_member_activity_history_table_header"
		width:t = "fw"
		class:t = "lbTable"
		text-valign:t = "center"
		text-halign:t = "center"
	}
}
tdiv {
	size:t = "pw, fh"
	overflow-y:t = "auto"
	scrollbarShortcuts:t = "yes"
	table {
		id:t = "clan_member_activity_history_table"
		width:t = "fw"
		class:t = "lbTable"
		text-valign:t = "center"
		text-halign:t = "center"
	}
}