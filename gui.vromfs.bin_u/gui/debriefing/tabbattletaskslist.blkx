debriefingTab {
	id:t = "battle_tasks_list_tab"
	debrBlock {
		size:t = "pw, ph"
		tdiv {
			id:t = "battle_tasks_list_div"
			size:t = "pw, fh"
			position:t = "relative"
			flow:t = "vertical"
			listbox {
				id:t = "battle_tasks_list_scroll_block"
				size:t = "pw, fh"
				overflow-y:t = "auto"
				flow:t = "vertical"
				scrollBox-dontResendShortcut:t = "yes"
				on_select:t = "onSelectTask"
				navigatorShortcuts:t = "yes"
				selImgType:t = "gamepadFocused"
			}
			textAreaCentered {
				id:t = "battle_tasks_list_msg"
				width:t = "80%pw"
				pos:t = "50%pw-50%w, 40%ph-40%h"
				position:t = "absolute"
				hideEmptyText:t = "yes"
				text:t = "#mainmenu/battleTasks/noBattleTasks"
			}
		}
	}
}