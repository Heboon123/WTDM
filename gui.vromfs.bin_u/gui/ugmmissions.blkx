img {
	position:t = "absolute"
	size:t = "3sw - 3sw*@isInVr, sh/3+1"
	pos:t = "-sw,sh-h-1@bh"
	background-image:t = "#ui/gameuiskin#optionlist_background_down"
}
root {
	type:t = "big"
	titletext {
		id:t = "title"
	}
	optionlist_container {
		id:t = "optionlist-container"
		type:t = "big"
		tdiv {
			size:t = "pw+@bw, ph"
			position:t = "relative"
			left:t = "-@bw"
			listbox {
				id:t = "items_list"
				flow:t = "vertical"
				pos:t = "0, 50%ph-50%h"
				position:t = "relative"
				chapterMisListSize:t = "yes"
				_on_select:t = "onItemSelect"
				_on_dbl_click:t = "onItemDblClk"
			}
			tdiv {
				id:t = "item_desc"
				flow:t = "vertical"
				pos:t = "1%sw,0"
				position:t = "relative"
				size:t = "fw, ph"
				padding-bottom:t = "0.5*@scrn_tgt/100.0"
				text {
					left:t = "(pw-w)/2"
					id:t = "item_name"
					position:t = "relative"
					style:t = "font:@fontMedium;color:@titleTextColor;"
					text:t = ""
				}
				tdiv {
					flow:t = "vertical"
					pos:t = "0,1*@scrn_tgt/100.0"
					position:t = "relative"
					size:t = "pw, 0.7ph"
					textarea {
						id:t = "item_info"
						text:t = ""
					}
					textarea {
						padding:t = "5"
						interval:t = "10"
						size:t = "pw, fh"
						id:t = "item_desc_text"
						text:t = ""
					}
				}
				tdiv {
					flow:t = "vertical"
					size:t = "pw, fh"
					tdiv {
						size:t = "pw, fh"
					}
					tdiv {
						interval:t = "5"
						id:t = "priceDiv"
					}
					text {
						id:t = "tags"
						text:t = ""
					}
				}
			}
		}
	}
}
