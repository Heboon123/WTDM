img {
	position:t = "absolute"
	size:t = "3sw - 3sw*@isInVr, sh/3+1"
	pos:t = "-sw,sh-h-1@bh"
	background-image:t = "#ui/gameuiskin#optionlist_background_down"
}
root {
	flow:t = "vertical"
	background-color:t = "@shadeBackgroundColor"
	type:t = "big"
	generic_options {
		id:t = "mission_box"
		width:t = "sw"
		height:t = "sh"
		position:t = "absolute"
		type:t = "big"
		titletext {
			id:t = "mission_title"
		}
		optionlist_container {
			overflow:t = "hidden"
			textarea {
				id:t = "mission_desc"
				pos:t = "50%pw-50%w,0"
				position:t = "relative"
				width:t = "90%pw"
				height:t = "fh"
				padding:t = "1*@scrn_tgt/100.0"
				overflow-y:t = "auto"
			}
			_newline {

			}
			autosize {
				id:t = "optionslist"
				display:t = "none"
				position:t = "relative"
				pos:t = "50%pw-50%w,0"
				width:t = "pw"
				height:t = "3*@baseTrHeight"
			}
		}
		navBar {

		}
	}
}