root {
	blur {

	}
	blur_foreground {

	}
	frame {
		id:t = "countryChoice-root"
		width:t = "0.75@scrn_tgt"
		pos:t = "0.5pw-0.5w, 0.5ph-0.5h"
		position:t = "absolute"
		class:t = "wndNav"
		style:t = "padding:0, 1@frameTopPadding, 0, 0"
		frame_header {
			activeText {
				caption:t = "yes"
				text:t = "#mainmenu/btnTutorial"
			}
			top_right_holder {
				hasRightIndent:t = "yes"
				CheckBox {
					id:t = "skip_tutorial"
					pos:t = "0, 50%ph-50%h"
					position:t = "relative"
					text:t = "#options/doNotAskMeAgain"
					tooltip:t = "#options/doNotAskMeAgain/tutorial/hint"
					on_change_value:t = "onSkipTutorial"
					btnName:t = "Y"
					CheckBoxImg {

					}
					ButtonImg {

					}
				}
			}
			Button_close {
				id:t = "btn_close_tutorial"
				on_click:t = "onClose"
				userInputType:t = "mouse"
			}
			dummy {
				on_click:t = "onClose"
				accessKey:t = "Esc"
				userInputType:t = "keyboard"
			}
			dummy {
				on_click:t = "onClose"
				btnName:t = "B"
				userInputType:t = "gamepad"
			}
		}
		tdiv {
			width:t = "pw"
			max-height:t = "1@rh - 1@frameTopPadding - 0.5w - 1@battleButtonHeight"
			pos:t = "0.5pw-0.5w, 0"
			position:t = "relative"
			flow:t = "vertical"
			overflow-y:t = "auto"
			textAreaCentered {
				id:t = "msgText"
				width:t = "pw"
				position:t = "relative"
				padding-bottom:t = "1@blockInterval"
			}
			tdiv {
				id:t = "rewards"
				pos:t = "0.5pw-0.5w, 0"
				position:t = "relative"
				flow:t = "vertical"
				padding-bottom:t = "1@blockInterval"
				display:t = "hide"
			}
		}
		Button_text {
			id:t = "btn_start"
			size:t = "pw, 0.5w+1@battleButtonHeight"
			position:t = "relative"
			visualStyle:t = "bigImg"
			iconPos:t = "middleBottom"
			btnName:t = "X"
			userInputType:t = "mouse"
			on_click:t = "onStart"
			img {
				id:t = "tutorial_image"
				width:t = "pw"
				height:t = "0.5w"
				background-image:t = "#ui/images/tutorial_fighter?P1"
				background-color:t = "@white"
			}
			text {
				size:t = "pw, 1@battleButtonHeight"
				text:t = "#multiplayer/btnStart"
			}
			focus_border {

			}
			ButtonImg {

			}
		}
		dummy {
			on_click:t = "onStart"
			accessKey:t = "Space | Enter | NumEnter"
			userInputType:t = "keyboard"
		}
		dummy {
			on_click:t = "onStart"
			btnName:t = "X"
			userInputType:t = "gamepad"
		}
	}
}