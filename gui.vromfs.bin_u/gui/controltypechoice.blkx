root {
	blur {

	}
	blur_foreground {

	}
	menutitle {
		id:t = "controlChoice-title"
	}
	frame {
		pos:t = "50%pw-50%w, 50%ph-50%h"
		position:t = "absolute"
		class:t = "wndNav"
		width:t = "1@scrn_tgt"
		flow:t = "vertical"
		frame_header {
			Button_close {
				id:t = "btn_back"
			}
		}
		textAreaCentered {
			id:t = "txt_icon"
			display:t = "hide"
			width:t = "pw"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
			text:t = "#options/chooseProfileImage"
		}
		textAreaCentered {
			width:t = "pw"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
			text:t = "#options/chooseControllerType"
		}
		HorizontalListBox {
			id:t = "controlType"
			pos:t = "50%pw-50%w, 0.005@scrn_tgt"
			position:t = "relative"
			height:t = "13.5*@scrn_tgt/100.0"
			class:t = "choice3"
			navigatorShortcuts:t = "yes"
			on_dbl_click:t = "onControlTypeDblClick"
			shopFilter {
				id:t = "ct_mouse"
				selected:t = "yes"
				useParentHeight:t = "yes"
				shopFilterImg {
					background-image:t = "#ui/gameuiskin#ct_mouse"
				}
				shopFilterText {
					text:t = "#controlType/mouse"
				}
			}
			shopFilter {
				id:t = "ct_xinput"
				useParentHeight:t = "yes"
				shopFilterImg {
					background-image:t = "#ui/gameuiskin#ct_xinput"
				}
				shopFilterText {
					text:t = "#controlType/xinput"
				}
			}
			shopFilter {
				id:t = "ct_own"
				useParentHeight:t = "yes"
				shopFilterImg {
					background-image:t = "#ui/gameuiskin#ct_own"
				}
				shopFilterText {
					text:t = "#controlType/own"
				}
			}
		}
		navBar {
			navRight {
				Button_text {
					text:t = "#mainmenu/btnApply"
					btnName:t = "X"
					on_click:t = "onControlTypeApply"
					ButtonImg {

					}
				}
				Button_text {
					id:t = "btn_cancel"
					text:t = "#msgbox/btn_cancel"
					_on_click:t = "goBack"
					btnName:t = "B"
					ButtonImg {

					}
				}
			}
		}
	}
}