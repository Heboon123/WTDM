root {
	behaviour:t = "button"
	behaviour:t = "accesskey"
	accessKey:t = "Esc"
	on_click:t = "onTakeCancel"
	blur {

	}
	blur_foreground {
		isRoot:t = "yes"
	}
	div {
		id:t = "slotbar_with_controls"
		width:t = "1@slotbarWidthFull"
		position:t = "absolute"
		left:t = "50%pw-50%w"
		top:t = "1@unitTrashBinPosY - h/2 - 12@sf/@pf"
		flow:t = "vertical"
		tdiv {
			margin-bottom:t = "20@sf/@pf"
			halign:t = "center"
			selectCrewLegend {
				id:t = "qualification_legend"
			}
		}
		slotbarNest {
			id:t = "take-aircraft-slotbar"
			class:t = "selectCrew"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
		}
		tdiv {
			position:t = "relative"
			pos:t = "50%pw-50%w, @itemsIntervalBig"
			padding-left:t = "0.5*@scrn_tgt/100.0"
			tdiv {
				id:t = "set_air_dnd_title"
				position:t = "relative"
				left:t = "50%pw-50%w"
				height:t = "40@sf/@pf"
				textAreaCentered {
					id:t = "set_air_dnd_title_text"
					class:t = "active"
					text:t = ""
				}
			}
		}
	}
	unitTrashBin {
		id:t = "unitTrashBin"
		css-hier-invalidate:t = "yes"
		img {
			background-image:t = "#ui/gameuiskin#icon_trash_bin.svg"
			size:t = "@trashBinIconSize, @trashBinIconSize"
			background-svg-size:t = "@trashBinIconSize, @trashBinIconSize"
			halign:t = "center"
		}
		textareaNoTab {
			id:t = "trashBinText"
			text:t = "#slotbar/removeVehicle"
			width:t = "0.9pw"
			margin-top:t = "1@blockInterval"
			halign:t = "center"
			text-align:t = "center"
			smallFont:t = "yes"
		}
	}
}