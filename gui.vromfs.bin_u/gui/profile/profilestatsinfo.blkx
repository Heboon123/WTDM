flow:t = "vertical"
tdiv {
	width:t = "pw"
	flow:t = "horizontal"
	padding-bottom:t = "1@blockInterval"
	HorizontalListBox {
		id:t = "modes_list"
		type:t = "transparent"
		navigatorShortcuts:t = "yes"
		move-only-hover:t = "yes"
		on_select:t = "onStatsModeChange"
	}
	tdiv {
		width:t = "450@sf/@pf"
		left:t = "pw-w"
		position:t = "absolute"
		flow:t = "horizontal"
		EditBox {
			id:t = "filter_edit_box"
			width:t = "fw"
			on_change_value:t = "applyFilter"
			on_cancel_edit:t = "onFilterCancel"
			text:t = ""
			edit-hint:t = "#contacts/search_placeholder"
		}
		popupFilter {
			margin-left:t = "1@blockInterval"
		}
	}
}
tdiv {
	size:t = "pw, fh"
	position:t = "relative"
	pos:t = "0.5pw-0.5w, 0"
	position:t = "relative"
	table {
		id:t = "airs_stats_table"
		size:t = "pw, ph"
		pos:t = "0.5pw-0.5w, 0"
		position:t = "relative"
		class:t = "lbTable"
		higlightRowOnHover:t = "yes"
		text-valign:t = "center"
		text-halign:t = "center"
	}
}
animated_wait_icon {
	id:t = "stats_loading"
	pos:t = "50%pw-50%w, 50%ph-50%h"
	position:t = "absolute"
	background-rotation:t = "0"
}