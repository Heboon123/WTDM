tdiv {
	position:t = "absolute"
	size:t = "@accountHeaderWidth, ph"
	left:t = "(pw-w)/2"
	flow:t = "vertical"
	padding-top:t = "24@sf/@pf"
	tdiv {
		size:t = "pw, ph"
		flow:t = "vertical"
		total-input-transparent:t = "yes"
		tdiv {
			position:t = "relative"
			size:t = "pw, 48@sf/@pf"
			background-color:t = "#11111111"
			HorizontalListBox {
				id:t = "modes_list"
				height:t = "ph"
				width:t = "pw"
				left:t = "(pw-w)/2"
				position:t = "relative"
				navigatorShortcuts:t = "yes"
				move-only-hover:t = "yes"
				autoSize:t = "yes"
				bottomSelectLine:t = "yes"
				transparentButtons:t = "yes"
				buttonsHasPadding:t = "yes"
				on_select:t = "onProfileStatsModeChange"
			}
		}
		tdiv {
			size:t = "pw + 20@sf/@pf, fh"
			overflow-y:t = "auto"
			scrollbarShortcuts:t = "yes"
			table {
				id:t = "stats_table"
				class:t = "lbTable"
				width:t = "@accountHeaderWidth"
				padding:t = "27@sf/@pf, 27@sf/@pf, 27@sf/@pf, 7@sf/@pf"
				isProfileStatsTable:t = "yes"
				text-halign:t = "center"
			}
		}
		tdiv {
			position:t = "absolute"
			top:t = "48@sf/@pf"
			size:t = "pw, 54@sf/@pf"
			background-image:t = "#!ui/images/profile/wnd_gradient.svg"
			background-color:t = "#FF111922"
			background-repeat:t = "expand-svg"
			rotation:t = "180"
		}
		tdiv {
			id:t = "stats_bottom_fade"
			display:t = "hide"
			position:t = "absolute"
			top:t = "ph-h"
			size:t = "pw, 52@sf/@pf"
			background-image:t = "#!ui/images/profile/wnd_gradient.svg"
			background-color:t = "#FF111922"
			background-repeat:t = "expand-svg"
		}
	}
}
animated_wait_icon {
	id:t = "profile_loading"
	pos:t = "0.5(pw-w),0.4(ph-h)"
	position:t = "absolute"
	background-rotation:t = "0"
}
timer {
	id:t = "profile_update"
	timer_handler_func:t = "onUpdate"
}