tdiv {
	id:t = "page_content"
	size:t = "pw, ph"
	flow:t = "vertical"
	margin-top:t = "2@blockInterval"
	tdiv {
		flow:t = "horizontal"
		size:t = "pw, 8@blockInterval"
		position:t = "relative"
		bgcolor:t = "@evenTrColor"
		margin-bottom:t = "2@blockInterval"
		HorizontalListBox {
			id:t = "modes_list"
			fullTransparent:t = "yes"
			bottomSelectLine:t = "yes"
			navigatorShortcuts:t = "yes"
			move-only-hover:t = "yes"
			on_select:t = "onStatsModeChange"
		}
		tdiv {
			size:t = "450@sf/@pf, ph"
			position:t = "absolute"
			left:t = "pw-w-1@blockInterval"
			popupFilter {
				margin-right:t = "1@blockInterval"
				valign:t = "center"
			}
			EditBox {
				id:t = "filter_edit_box"
				width:t = "fw"
				on_change_value:t = "applyServiceRecordsFilter"
				on_cancel_edit:t = "onFilterCancel"
				text:t = ""
				edit-hint:t = "#contacts/search_placeholder"
				valign:t = "center"
			}
		}
	}
	table {
		id:t = "units_stats_table"
		width:t = "pw"
		height:t = "fh"
		pos:t = "0.5pw-0.5w, 0"
		position:t = "relative"
		class:t = "lbTable"
		higlightRowOnHover:t = "yes"
		text-valign:t = "center"
	}
}