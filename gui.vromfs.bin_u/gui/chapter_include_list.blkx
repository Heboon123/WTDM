chapterListPlace {
	id:t = "chapter_place"
	height:t = "ph"
	flow:t = "vertical"
	tdiv {
		id:t = "div_before_chapters_list"
		width:t = "pw"
		display:t = "hide"
	}
	tdiv {
		id:t = "chapters_list_place"
		size:t = "pw, fh"
		flow:t = "vertical"
		popupFilter {
			margin-left:t = "1@buttonMargin"
		}
		tdiv {
			id:t = "listbox_filter_holder"
			width:t = "pw"
			pos:t = "1@blockInterval, 0"
			position:t = "relative"
		}
		listbox {
			id:t = "items_list"
			size:t = "pw, fh"
			flow:t = "vertical"
			move-only-hover:t = "yes"
			navigatorShortcuts:t = "yes"
			on_select:t = "onItemSelect"
			_on_dbl_click:t = "onItemDblClick"
		}
		textAreaCentered {
			id:t = "items_list_msg"
			width:t = "80%pw"
			pos:t = "50%pw-50%w, 40%ph-40%h"
			position:t = "absolute"
			hideEmptyText:t = "yes"
			text:t = ""
		}
		animated_wait_icon {
			id:t = "items_list_wait_icon"
			pos:t = "50%pw-50%w, 40%ph-40%h"
			position:t = "absolute"
			background-rotation:t = "0"
			display:t = "hide"
		}
	}
}