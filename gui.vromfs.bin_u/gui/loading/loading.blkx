root {
	tdiv {
		id:t = "bg_picture_container"
		size:t = "sw, sh"
		position:t = "root"
		background-color:t = "@black"
		tdiv {
			pos:t = "50%sw-50%w,50%sh-50%h"
			position:t = "absolute"
			size:t = "2.333sh, sh"
			overflow:t = "hidden"
			tdiv {
				id:t = "animated_bg_picture"
				pos:t = "pw/2-w/2, ph/2-h/2"
				position:t = "absolute"
				size:t = "2.5sh, sh"
				behaviour:t = "multiLayerImage"
				blend-time:t = "500"
			}
			tdiv {
				size:t = "0.333sh, sh"
				pos:t = "-w/2, 0"
				position:t = "absolute"
				background-image:t = "!ui/gameuiskin#debriefing_bg_grad@@ss"
				background-color:t = "@black"
			}
			tdiv {
				size:t = "0.333sh, sh"
				pos:t = "pw -w/2, 0"
				position:t = "absolute"
				background-image:t = "!ui/gameuiskin#debriefing_bg_grad@@ss"
				background-color:t = "@black"
			}
		}
	}
	BottomMenuPanel {
		shadowSafeArea {

		}
		line {

		}
		Red_shadow_light {
			pos:t = "50%pw-50%w, 0"
			position:t = "absolute"
			size:t = "25%pw, ph"
		}
		GameLogoPlate {
			pos:t = "50%pw - 50%w, 50%ph-50%h"
			position:t = "absolute"
			Shadow {
				redPlate {
					pattern {
						type:t = "dark_diag_lines"
						tdiv {
							height:t = "1@titleLogoPlateHeight + 0.5@bh - 0.5@bhInVr"
							min-width:t = "1@titleLogoPlateWidth"
							tdiv {
								pos:t = "50%pw-50%w, 50%ph-50%h"
								position:t = "relative"
								padding:t = "0.01@scrn_tgt, 0"
								animated_wait_icon {
									id:t = "rot"
									pos:t = "0, 50%ph-50%h"
									position:t = "relative"
									background-rotation:t = "0"
								}
								textarea {
									id:t = "loading"
									pos:t = "0, 50%ph-50%h"
									position:t = "relative"
									text:t = "#loading"
									mediumFont:t = "yes"
									overlayTextColor:t = "active"
									textShade:t = "yes"
								}
							}
						}
					}
				}
			}
		}
		tdiv {
			behavior:t = "bhvUpdater"
			value:t = '{"viewId": "COPYRIGHT_TEXT"}'
			css-hier-invalidate:t = "yes"
			pos:t = "pw-w-1@bw, 50%ph - 50%h"
			position:t = "absolute"
			copyright {
				id:t = "copyright_text"
			}
		}
	}
	tdiv {
		width:t = "0.67@rw $min 2@rh"
		pos:t = "50%pw-50%w, 83%sh - 1@bh -50%h"
		position:t = "absolute"
		flow:t = "vertical"
		background-color:t = "@shadeBackgroundColor4"
		background-repeat:t = "expand"
		padding:t = "0.005sw, 0.01sh, 0.005sw, 0.02sh"
		textAreaCentered {
			id:t = "help_text"
			text:t = ""
			style:t = "color:@helpF1Color;"
			pos:t = "(pw-w)/2, 0"
			position:t = "relative"
			width:t = "pw"
		}
		loadingTip {
			pos:t = "(pw-w)/2, 10"
			position:t = "relative"
			width:t = "pw"
			behaviour:t = "bhvLoadingTip"
			loadingHint {
				id:t = "tip_hint"
				width:t = "pw"
				behaviour:t = "bhvHint"
				isWrapInRowAllowed:t = "yes"
			}
		}
	}
}
timer {
	id:t = "cutscene_update"
	timer_handler_func:t = "onUpdate"
}