{
  "flow": "horizontal",
  "tdiv": [
    {
      "position": "relative",
      "size": "1@itemIconBlockHeight, 1@itemIconBlockHeight",
      "img": {
        "id": "image",
        "position": "relative",
        "size": "pw, ph",
        "background-svg-size": "pw, ph",
        "background-repeat": "aspect-ratio"
      }
    },
    {
      "position": "relative",
      "id": "text_container",
      "flow": "vertical",
      "width": "fw",
      "margin-left": "2@blockInterval",
      "textAreaSmall": {
        "id": "header",
        "max-width": "6@decalIconHeight",
        "margin-top": "2@blockInterval",
        "hideEmptyText": "yes",
        "overlayTextColor": "unlockHeader"
      },
      "textareaNoTab": [
        {
          "id": "description",
          "margin-top": "@blockInterval",
          "hideEmptyText": "yes",
          "max-width": "6@decalIconHeight",
          "smallFont": "yes"
        },
        {
          "id": "price",
          "display": "hide",
          "max-width": "6@decalIconHeight",
          "hideEmptyText": "yes",
          "margin-top": "@blockInterval"
        }
      ],
      "tdiv": [
        {
          "id": "conditions",
          "flow": "horizontal",
          "margin-top": "2@blockInterval",
          "cardImg": {
            "id": "state",
            "size": "@unlockIconSize, @unlockIconSize",
            "background-image": "#ui/gameuiskin#favorite",
            "margin-right": "@blockInterval"
          },
          "tdiv": {
            "pos": "0, ph/2-h/2",
            "position": "relative",
            "flow": "vertical",
            "challengeDescriptionProgress": {
              "id": "progress",
              "value": "",
              "display": "hide"
            },
            "textareaNoTab": [
              {
                "id": "mainCond",
                "max-width": "6@decalIconHeight",
                "overflow": "hidden",
                "smallFont": "yes",
                "margin-top": "@blockInterval",
                "hideEmptyText": "yes"
              },
              {
                "id": "multDesc",
                "max-width": "6@decalIconHeight",
                "overflow": "hidden",
                "smallFont": "yes"
              },
              {
                "id": "conds",
                "max-width": "6@decalIconHeight",
                "overflow": "hidden",
                "smallFont": "yes",
                "margin-top": "@blockInterval",
                "hideEmptyText": "yes"
              },
              {
                "id": "obtain_info",
                "hideEmptyText": "yes",
                "margin-top": "@blockInterval",
                "max-width": "6@decalIconHeight",
                "smallFont": "yes"
              }
            ]
          }
        },
        {
          "id": "additional_description",
          "behavior": "posNavigator",
          "margin-top": "8@dp",
          "flow": "v-flow",
          "width": "pw",
          "height": "160@sf/@pf",
          "display": "hide",
          "hideEmptyText": "yes",
          "canSelectNone": "yes"
        }
      ]
    }
  ]
}