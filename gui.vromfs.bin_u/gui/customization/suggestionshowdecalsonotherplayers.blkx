root {
	type:t = "big"
	blur {

	}
	blur_foreground {

	}
	frame {
		pos:t = "0.5pw-0.5w, 0.5ph-0.5h"
		position:t = "absolute"
		width:t = "80%sh"
		max-width:t = "1100@sf/@pf + 2@framePadding"
		max-height:t = "@rh"
		class:t = "wndNav"
		frame_header {
			activeText {
				width:t = "p.p.w-2@buttonHeight"
				caption:t = "yes"
				pare-text:t = "yes"
				text:t = "#options/show_others_decals"
			}
			Button_close {
				id:t = "btn_close"
			}
		}
		img {
			width:t = "pw"
			height:t = "0.625w"
			max-width:t = "1100@sf/@pf"
			max-height:t = "500.0/800*1100@sf/@pf"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
			background-image:t = "#ui/images/popup_p_40c_decals"
		}
		textareaNoTab {
			id:t = "desc_text"
			pos:t = "50%pw-50%w, 1@framePadding"
			position:t = "relative"
			max-width:t = "pw"
			max-height:t = "fh"
			removeParagraphIndent:t = "yes"
			text:t = ""
			font-bold:t = "@fontMedium"
		}
		navBar {
			navLeft {
				Button_text {
					text:t = "#mainmenu/btnRefuse"
					btnName:t = "B"
					on_click:t = "goBack"
					ButtonImg {

					}
				}
			}
			navRight {
				Button_text {
					text:t = "#mainmenu/btnTurnOn"
					btnName:t = "X"
					on_click:t = "onOk"
					visualStyle:t = "secondary"
					buttonWink {

					}
					ButtonImg {

					}
				}
			}
		}
	}
}