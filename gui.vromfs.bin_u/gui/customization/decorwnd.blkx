tdiv {
	height:t = "fh"
	id:t = "decor_menu"
	frame {
		size:t = "@countDecalsInWidth * @customizationDecoratorBlockWidth + @scrollBarSize + @buttonMargin, ph"
		tdiv {
			height:t = "@frameHeaderHeight"
			width:t = "pw"
			frame_header {
				activeText {
					id:t = "decals_wnd_header"
					text:t = "#decals"
					caption:t = "yes"
				}
				Button_close {
					style:t = "_on_click:onBtnCloseDecalsMenu"
				}
			}
		}
		EditBox {
			id:t = "filter_edit_box"
			width:t = "pw"
			on_change_value:t = "applyFilter"
			on_cancel_edit:t = "onFilterCancel"
			text:t = ""
			edit-hint:t = "#contacts/search_placeholder"
		}
		decorPanels {
			id:t = "panels"
			size:t = "pw, fh"
			currentPanel:t = "categories"
			css-hier-invalidate:t = "yes"
			categoriesPanel {
				id:t = "categories_list"
				width:t = "pw"
				margin:t = "@buttonMargin"
				behaviour:t = "posNavigator"
				moveX:t = "linear"
				moveY:t = "linear"
				navigatorShortcuts:t = "yes"
				move-only-hover:t = "yes"
				on_select:t = "onDecorCategorySelect"
				on_activate:t = "onDecorCategoryActivate"
				css-hier-invalidate:t = "yes"
				flow:t = "vertical"
				class:t = "decalsList"
				overflow-y:t = "auto"
				canSelectNone:t = "yes"
				position:t = "absolute"
			}
			decoratorsPanel {
				id:t = "filtered_decorators"
				behaviour:t = "flow"
				width:t = "pw"
				margin:t = "@buttonMargin"
				css-hier-invalidate:t = "yes"
				overflow-y:t = "auto"
				position:t = "absolute"
				display:t = "hide"
			}
		}
	}
}