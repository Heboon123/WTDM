tdiv {
	flow:t = "vertical"
	frame {
		text {
			smallFont:t = "yes"
			text:t = "#mainmenu/btnModifications"
		}
		tdiv {
			margin-top:t = "0.5@blockInterval"
			id:t = "modifications_groups"
			behaviour:t = "posNavigator"
		}
	}
	frame {
		margin-top:t = "1@blockInterval"
		text {
			id:t = "mod_group_txt"
			smallFont:t = "yes"
			text:t = ""
		}
		tdiv {
			margin-top:t = "0.5@blockInterval"
			id:t = "modifications_slots"
		}
	}
	div {
		id:t = "mod_wait_screen"
		position:t = "absolute"
		size:t = "pw,ph"
		background-color:t = "@fullScreenBgrColor"
		display:t = "hide"
		animated_wait_icon {
			pos:t = "50%pw-50%w, 50%ph-50%h"
			position:t = "relative"
			background-rotation:t = "0"
		}
	}
}