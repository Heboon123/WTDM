tdiv {
	id:t = "hud_hints_nest"
	size:t = "pw, ph"
	position:t = "absolute"
	css-hier-invalidate:t = "yes"
	behavior:t = "Timer"
	tdiv {
		pos:t = "pw/2 - w/2, 1@topCenterMessagesTopPos"
		position:t = "absolute"
		flow:t = "vertical"
		tdiv {
			id:t = "hud_message_killer_card"
			position:t = "relative"
			pos:t = "pw/2 - w/2, -0.04@shHud"
		}
		hudMessages {
			id:t = "hud_messages_death_reason_notification"
			width:t = "@shHud"
			pos:t = "pw/2 - w/2, 0.85@topCenterMainMessagesMinHeight"
			position:t = "relative"
			flow:t = "vertical"
			message_style:t = "death_reason_notification"
		}
	}
	tdiv {
		id:t = "mission_hints"
		width:t = "2/3@rwHud"
		pos:t = "pw-w, 0.9ph"
		position:t = "relative"
		flow:t = "vertical"
		flow-align:t = "right"
	}
}
tdiv {
	id:t = "hud_live_stats_nest"
	width:t = "@shHud"
	pos:t = "pw/2-w/2, ph-h-0.032@shHud"
	position:t = "absolute"
	display:t = "hide"
}
tdiv {
	id:t = "minor_priority_hints"
	width:t = "pw"
	position:t = "absolute"
	pos:t = "50%pw-50%w, ph - h"
	flow:t = "vertical"
}
tdiv {
	id:t = "hud_message_timers"
}
timer {
	id:t = "hud_message_timer"
}