animSizeObj {
	id:t = "hud_streaks"
	position:t = "relative"
	pos:t = "pw/2 - w/2, 0"
	width:t = "45%@rwHud"
	animation:t = "hide"
	height-base:t = "1"
	height-end:t = "100"
	height:t = "1"
	_size-timer:t = "0"
	tdiv {
		id:t = "streak_content"
		width:t = "pw"
		flow:t = "vertical"
		display:t = "hide"
		enable:t = "no"
		behaviour:t = "massTransparency"
		transp-base:t = "255"
		transp-end:t = "0"
		transp-func:t = "cube"
		transp-time:t = "2000"
		_transp-timer:t = "1"
		_blink:t = "no"
		img {
			id:t = "streak_icon"
			size:t = "0.06@shHud, 0.06@shHud"
			pos:t = "pw/2-w/2, 0"
			position:t = "relative"
		}
		textareaNoTab {
			id:t = "streak_header"
			width:t = "pw"
			style:t = "color:@streakTextColor; font:@fontHudMedium; text-align:center;"
			text:t = ""
			shadeStyle:t = "HudHeader3D"
			pos:t = "0, -0.004*@shHud"
			position:t = "relative"
		}
		textareaNoTab {
			id:t = "streak_score"
			width:t = "pw"
			style:t = "color:@white; font:@fontHudSmall; text-align:center;"
			shadeStyle:t = "HudTinyLight"
			text:t = ""
		}
	}
}