id:t = "options-root"
img {
	position:t = "absolute"
	size:t = "3sw - 3sw*@isInVr, sh/3+1"
	pos:t = "-sw,sh-h-1@bh"
	background-image:t = "#ui/gameuiskin#optionlist_background_down"
}
root {
	type:t = "big"
	blur {

	}
	blur_foreground {

	}
	menutitle {
		id:t = "msgbox-title"
	}
	optionlist_container {
		pos:t = "0.5(sw-w), 0.5(sh-h)"
		position:t = "absolute"
		id:t = "msg_box"
		padding:t = "5*@scrn_tgt/100.0"
		height:t = "60*@scrn_tgt/100.0"
		flow:t = "vertical"
		textarea {
			id:t = "textHelp"
			width:t = "90%pw"
			max-height:t = "ph"
			pos:t = "50%pw-55%w, 40%ph-40%h"
			position:t = "relative"
			padding:t = "1*@scrn_tgt/100.0"
			display:t = "hide"
			overflow-y:t = "auto"
		}
		tdiv {
			width:t = "@srw"
			pos:t = "50%pw-50%w, 1*@scrn_tgt/100.0"
			position:t = "absolute"
			flow:t = "vertical"
			ButtonsLine {
				id:t = "line_combo_airBrakes"
				ButtonImg {
					btnName:t = "DpadLeft"
				}
				text {
					text:t = "+"
				}
				ButtonImg {
					btnName:t = "R3"
				}
				text {
					text:t = " = "
				}
				text {
					id:t = "combo_airBrakes"
					text:t = "#controls/combo_airBrakes"
				}
			}
			ButtonsLine {
				id:t = "line_combo_resetTrim"
				ButtonImg {
					btnName:t = "DpadRight"
				}
				text {
					text:t = "+"
				}
				ButtonImg {
					btnName:t = "X"
				}
				text {
					text:t = " = "
				}
				text {
					id:t = "combo_resetTrim"
					text:t = "#controls/combo_resetTrim_2"
				}
			}
		}
		tdiv {
			id:t = "pictureHelp"
			size:t = "2.0ph, 0.9ph"
			max-width:t = "(0.6 + 0.4@isWide) * @rw"
			max-height:t = "0.45w"
			overflow:t = "visible"
			pos:t = "50%pw-50%w, 50%ph-50%h"
			position:t = "absolute"
			img {
				id:t = "stick-help"
				background-image:t = "ui/controller"
				size:t = "512/720*@scrn_tgt, 256/720*@scrn_tgt"
				pos:t = "50%pw-50%w, 50%ph-50%h"
				position:t = "absolute"
				textButtonHint {
					id:t = "start"
					pos:t = "0.61pw, 0.085ph-h"
					text:t = "#controls/start"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "cross"
					pos:t = "0.86pw, 0.69ph-3.7*@scrn_tgt/100.0"
					text:t = "#controls/cross"
					position:t = "absolute"
					style:t = "behavior:textArea; re-type:textarea;"
					min-width:t = "27%sw"
				}
				textButtonHint {
					id:t = "triangle"
					pos:t = "0.84pw, 0.375ph-h"
					text:t = "#controls/triangle"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "R3"
					pos:t = "0.74pw, 0.99ph"
					text:t = "#controls/R3"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "R1"
					pos:t = "0.84pw, 0.25ph-h"
					text:t = "#controls/R1"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "R2"
					pos:t = "0.84pw, 0.16ph-h"
					text:t = "#controls/R2"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "RS"
					pos:t = "0.69pw, 1.0ph-h"
					text:t = "#controls/RS"
					position:t = "absolute"
					style:t = "behavior:textArea; re-type:textarea;"
					min-width:t = "30%sw"
				}
				textButtonHint {
					id:t = "select"
					pos:t = "0.41pw-w, 0.085ph-h"
					text:t = "#controls/select"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "L1"
					pos:t = "0.18pw-w, 0.25ph-h"
					text:t = "#controls/L1"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "L2"
					pos:t = "0.18pw-w, 0.16ph-h"
					text:t = "#controls/L2"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "square"
					pos:t = "0.84pw, 0.60ph-h"
					text:t = "#controls/square"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "circle"
					pos:t = "0.84pw, 0.49ph-h"
					text:t = "#controls/circle"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "L3"
					pos:t = "0.15pw-w, 0.40ph"
					text:t = "#controls/L3"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "LS"
					pos:t = "0.15pw-w, 0.40ph-h"
					text:t = "#controls/LS"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "dpad_up"
					pos:t = "0.15pw-w, 0.63ph-h"
					text:t = "#controls/dpad_up"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "dpad_left"
					pos:t = "0.15pw-w, 0.75ph-h"
					text:t = "#controls/dpad_left"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "dpad_right"
					pos:t = "0.15pw-w, 0.88ph-h"
					text:t = "#controls/dpad_right"
					position:t = "absolute"
				}
				textButtonHint {
					id:t = "dpad_down"
					pos:t = "0.32pw-w, 1.0ph-h"
					text:t = "#controls/dpad_down"
					position:t = "absolute"
				}
			}
		}
		table {
			size:t = "pw"
			pos:t = "50%pw-50%w, ph-h-1*@scrn_tgt/100.0"
			position:t = "absolute"
			class:t = "optionsTable"
			baseRow:t = "yes"
			behavior:t = "PosOptionsNavigator"
			tr {
				width:t = "pw"
				css-hier-invalidate:t = "all"
				td {
					cellType:t = "left"
					width:t = "50%pw"
					overflow-x:t = "hidden"
					optiontext {
						text:t = "#difficulty_name"
					}
				}
				td {
					cellType:t = "right"
					width:t = "50%pw"
					padding-left:t = "@optPad"
					spinnerListBox {
						id:t = "controls_difficulty"
						size:t = "pw, ph"
						on_select:t = "onControlsDifficulty"
						option {
							max-width:t = "p.p.w-5*@scrn_tgt/100.0"
							pare-text:t = "yes"
							selected:t = "yes"
							optiontext {
								text:t = "#difficulty0"
							}
						}
						option {
							max-width:t = "p.p.w-5*@scrn_tgt/100.0"
							pare-text:t = "yes"
							optiontext {
								text:t = "#difficulty1"
							}
						}
						option {
							max-width:t = "p.p.w-5*@scrn_tgt/100.0"
							pare-text:t = "yes"
							optiontext {
								text:t = "#difficulty2"
							}
						}
					}
				}
			}
		}
	}
}