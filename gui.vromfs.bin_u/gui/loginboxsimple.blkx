img {
	position:t = "absolute"
	size:t = "3sw - 3sw*@isInVr, sh/3+1"
	pos:t = "-sw,sh-h-1@bh"
	background-image:t = "#ui/gameuiskin#optionlist_background_down"
}
root {
	tdiv {
		id:t = "bg_picture_container"
		size:t = "sw, sh"
		position:t = "root"
		background-color:t = "@black"
		tdiv {
			pos:t = "50%sw-50%w,50%sh-50%h"
			position:t = "absolute"
			size:t = "2.333sh, sh"
			overflow:t = "hidden"
			tdiv {
				id:t = "animated_bg_picture"
				pos:t = "pw/2-w/2, ph/2-h/2"
				position:t = "absolute"
				size:t = "2.5sh, sh"
				behaviour:t = "multiLayerImage"
				blend-time:t = "500"
			}
			tdiv {
				size:t = "0.333sh, sh"
				pos:t = "-w/2, 0"
				position:t = "absolute"
				background-image:t = "!ui/gameuiskin#debriefing_bg_grad@@ss"
				background-color:t = "@black"
			}
			tdiv {
				size:t = "0.333sh, sh"
				pos:t = "pw -w/2, 0"
				position:t = "absolute"
				background-image:t = "!ui/gameuiskin#debriefing_bg_grad@@ss"
				background-color:t = "@black"
			}
		}
	}
	TopMenuPanel {
		shadowSafeArea {

		}
		TopMenuPanelBGPlace {
			id:t = "top_gamercard_bg"
			TopMenuPanelBg {
				width:t = "pw"
				Red_shadow_light {
					pos:t = "50%pw-50%w, 0"
					position:t = "absolute"
					size:t = "50%pw, ph"
				}
				tdiv {
					pos:t = "50%pw-50%w, -0.5@bh + 0.5@bhInVr"
					position:t = "absolute"
					padding:t = "1@titleLogoPlatePadding"
					GameLogoPlate {
						id:t = "gamercard_logo"
						Shadow {
							redPlate {
								pattern {
									type:t = "dark_diag_lines"
									padding-top:t = "0.5@bh - 0.5@bhInVr"
									img {
										id:t = "titleLogo"
										size:t = "256*@loginLogoScale,128*@loginLogoScale"
										background-image:t = "ui/title128.ddsx"
									}
								}
							}
						}
					}
					tdiv {
						pos:t = "pw, 1@topBarHeight"
						position:t = "absolute"
						versionText {
							padding-left:t = "0.02@scrn_tgt"
						}
					}
				}
			}
			tdiv {
				pos:t = "pw-w, ph-h"
				position:t = "absolute"
				Button_close {
					id:t = "button_exit"
					_on_click:t = "goBack"
					relative:t = "yes"
					display:t = "hide"
					enable:t = "no"
				}
			}
		}
	}
	BottomMenuPanel {
		shadowSafeArea {

		}
		line {

		}
		pattern {
			type:t = "bright_texture"
		}
		tdiv {
			behavior:t = "bhvUpdater"
			value:t = '{"viewId": "COPYRIGHT_TEXT"}'
			css-hier-invalidate:t = "yes"
			pos:t = "pw-w-1@bw, 50%ph - 50%h"
			position:t = "absolute"
			copyright {
				id:t = "copyright_text"
			}
		}
		CompanyLogo {
			pos:t = "pw-w-1@bw -1@companyLogoPadW, -h -1@companyLogoPadH"
			position:t = "absolute"
		}
	}
	tdiv {
		id:t = "authorization_block"
		pos:t = "50%sw-50%w, 80%sh - 50%h"
		position:t = "absolute"
		flow:t = "vertical"
		textAreaCentered {
			id:t = "xbox_active_usertag"
			caption:t = "yes"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
			margin-bottom:t = "1@blockInterval"
			hideEmptyText:t = "yes"
			text:t = ""
			shadeStyle:t = "shadowed"
		}
		authorizationBlock {
			id:t = "authorization_button_place"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
			flow:t = "vertical"
		}
		textAreaCentered {
			id:t = "user_notify_text"
			pos:t = "50%pw-50%w, 0"
			position:t = "relative"
			margin-top:t = "1@blockInterval"
			max-width:t = "50%sw"
			text:t = ""
			hideEmptyText:t = "yes"
			shadeStyle:t = "shadowed"
		}
	}
}