root {
	div {
		id:t = "dark_screen"
		size:t = "sw, sh"
		position:t = "root"
	}
	tdiv {
		id:t = "texts_screen"
		size:t = "@rw, @rh"
		pos:t = "@bw, @bh"
		position:t = "absolute"
	}
	tdiv {
		id:t = "lines_block"
		size:t = "sw, sh"
		position:t = "root"
	}
	tdiv {
		id:t = "msg_block"
		max-width:t = "70%sw"
		left:t = "50%pw-50%w"
		top:t = "50%ph-50%h"
		position:t = "absolute"
		flow:t = "vertical"
		textarea {
			id:t = "msg_text"
			left:t = "50%pw-50%w"
			max-width:t = "pw"
			position:t = "relative"
			text-align:t = "center"
			mediumFont:t = "yes"
			input-transparent:t = "yes"
		}
		pressShortcutBlock {
			id:t = "next_step_shortcut"
			left:t = "50%pw-50%w"
			position:t = "relative"
			margin-top:t = "0.05@scrn_tgt"
			text-valign:t = "center"
		}
	}
	tdiv {
		id:t = "arrows_container"
		size:t = "pw, ph"
		position:t = "absolute"
	}
	Button_close {
		id:t = "close_btn"
		display:t = "no"
		style:t = "pos:@rw+@bw-w, 1@topGamercardButtonsPos; position:absolute; margin-right:0;"
		_on_click:t = "goBack"
	}
	DummyButton {
		id:t = "dummy_console_next"
		on_click:t = "consoleNext"
		btnName:t = "A"
		onlyA:t = "yes"
	}
	timer {
		id:t = "allow_cancel_timer"
		timer_handler_func:t = "onAllowCancelTimer"
		timer_interval_msec:t = "1000"
	}
}