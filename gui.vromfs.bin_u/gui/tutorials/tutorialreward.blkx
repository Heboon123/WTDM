root {
	type:t = "big"
	blur {

	}
	blur_foreground {

	}
	frame {
		id:t = "reward_frame"
		class:t = "wndNav"
		width:t = "0.75@scrn_tgt"
		pos:t = "0.5pw-0.5w, 0.5ph-0.5h"
		position:t = "absolute"
		frame_header {
			activeText {
				id:t = "award_name"
				width:t = "p.p.w-2@buttonHeight"
				caption:t = "yes"
				pare-text:t = "yes"
			}
			Button_close {
				id:t = "btn_close"
			}
		}
		img {
			id:t = "award_image"
			position:t = "relative"
			width:t = "pw"
			height:t = "0.75w"
		}
		tdiv {
			width:t = "pw"
			position:t = "relative"
			flow:t = "vertical"
			overflow-y:t = "auto"
			textAreaCentered {
				id:t = "award_desc"
				position:t = "relative"
				width:t = "pw"
				removeParagraphIndent:t = "yes"
				text:t = ""
				on_link_click:t = "proccessLinkFromText"
			}
			textAreaCentered {
				id:t = "award_reward"
				position:t = "relative"
				width:t = "pw"
				overlayTextColor:t = "userlog"
				removeParagraphIndent:t = "yes"
				text:t = ""
				on_link_click:t = "proccessLinkFromText"
			}
			tdiv {
				id:t = "reward_markup"
				left:t = "50%pw-50%w"
				position:t = "relative"
				flow:t = "vertical"
				display:t = "hide"
			}
			textAreaCentered {
				id:t = "next_award"
				width:t = "pw"
				position:t = "relative"
				textHide:t = "yes"
				text:t = ""
			}
		}
		navBar {
			navRight {
				Button_text {
					id:t = "btn_use_decorator"
					text:t = "#decorator/use/decal"
					btnName:t = "Y"
					_on_click:t = "onUseDecorator"
					enable:t = "no"
					display:t = "hide"
					ButtonImg {

					}
				}
				Button_text {
					id:t = "btn_ok"
					text:t = "#mainmenu/btnOk"
					btnName:t = "X"
					_on_click:t = "onOk"
					ButtonImg {

					}
				}
			}
		}
	}
}